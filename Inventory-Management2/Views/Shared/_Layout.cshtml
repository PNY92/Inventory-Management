@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> UserManager;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory_Management2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory_Management2.styles.css" asp-append-version="true" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .nav-item a {
            border-radius: 10px;
        }
        .nav-item a:hover {
            background-color: var(--bs-gray-700);
            
        }
    </style>
</head>


<body class="m-0 p-0">
    <!--Toast -->

    
    
    <div class="d-flex" style="height: 100vh;">
        <!-- Sidebar -->
        <div style="background-color: var(--bs-gray-900) ;width: 300px; height: 100vh; position: sticky; top: 0;">
            <!-- Sidebar Header -->
            <div class="sidebar-label d-flex align-items-center mt-2">
                <span class="me-2 ms-3">
                    <i class="bi bi-box-seam text-white h5"></i>
                </span>
                <label class="fs-6 text-white">
                    Inventory Management
                </label>
                
            </div>
            <hr class="bg-white" />
            
            <div class="sidebar-content">
                <div class="d-grid gap-4">
                    <ul class="nav flex-column">
                        <div class="ms-2" style="color: lightgray; font-size: 15px">Application</div>
                        <li class="nav-item mx-2">

                            <a class="nav-link text-white active d-flex align-items-center" aria-current="page" href="/">
                                <span>
                                    <i class="bi bi-speedometer2" style="font-size: 15px"></i>
                                </span>
                                <div class="ms-2" style="font-size: 15px">
                                    Dashboard
                                </div>
                            </a>
                        </li>
                        <li class="nav-item mx-2">

                            <a class="nav-link text-white d-flex" aria-current="page" href="/Items">
                                <span>
                                    <i class="bi bi-box2" style="font-size: 15px"></i>
                                </span>
                                <div class="ms-2" style="font-size: 15px">
                                    Items
                                </div>
                            </a>
                        </li>
                    </ul>

                    @{
                        if (User.IsInRole("Admin")) {
                            <ul class="nav flex-column">
                                <div class="ms-2" style="color: lightgray; font-size: 15px">Admin</div>
                                <li class="nav-item mx-2">

                                    <a class="nav-link text-white active d-flex align-items-center" aria-current="page" href="/Admin/Manage">
                                        <span>
                                            <i class="bi bi-kanban" style="font-size: 15px"></i>
                                        </span>
                                        <div class="ms-2" style="font-size: 15px">
                                            Management
                                        </div>
                                    </a>
                                </li>
                                <li class="nav-item mx-2">

                                    <a class="nav-link text-white active d-flex align-items-center" aria-current="page" href="/Admin/Users">
                                        <span>
                                            <i class="bi bi-person-circle" style="font-size: 15px"></i>
                                        </span>
                                        <div class="ms-2" style="font-size: 15px">
                                            Users
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        }
                    }
                    
                </div>
                
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1 d-flex flex-column">
            <div class="container flex-row justify-content-end" style="height: 50px;">
                <partial name="_LoginPartial.cshtml"></partial>
            </div>
            

            <div class="bg-light flex-grow-1 overflow-auto">
                <main role="main" class="pb-3">
                    @RenderBody()
                    @{
                        if (TempData["ToastMessage"] != null)
                        {
                            

                            <div class="toast-container position-fixed bottom-0 end-0 p-3">
                                <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                                    <div class="toast-header">
                                        <strong class="me-auto">System</strong>
                                        <small>Now</small>
                                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                                    </div>
                                    <div class="toast-body">
                                        @TempData["ToastMessage"]
                                    </div>
                                </div>
                            </div>

                            
                        }
                    }
                </main>
            </div>

            <footer class="border-top footer text-muted">
                <div class="container text-center">
                    &copy; 2025 - Inventory_Management2 -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
 