@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

@model IdentityUser;

@{
    ViewData["Title"] = "User Details";
}

<div class="ps-2">
    <h3 class="mt-4 display-6">Details</h3>

    <form asp-action="UpdateUser" method="post" class="d-flex gap-3 flex-column mx-5 mt-3">
        <div>
            <label for="exampleFormControlInput1" class="form-label">Id</label>
            <input name="id" type="text" class="form-control" readonly id="exampleFormControlInput1" value="@Model.Id">
        </div>
        <div>
            <label for="exampleFormControlInput1" class="form-label">Name</label>
            <input name="username" type="text" class="form-control" id="exampleFormControlInput1" value="@Model.UserName">
        </div>
        <div>
            <label for="exampleFormControlTextarea1" class="form-label">Email</label>
            <input name="email" class="form-control" id="exampleFormControlTextarea1" rows="3" value="@Model.Email"></input>
        </div>
        <div>
            <label for="exampleFormControlInput1" class="form-label">Role</label>
            <input name="role" type="text" class="form-control" id="exampleFormControlInput1" @{
                   var roles = await userManager.GetRolesAsync(Model);
                   }value=@string.Join(", ", roles)
        </div>
        <div class="mt-3">
            <input type="submit" class="btn btn-primary" value="Submit"></input>
        </div>
    </form>
    @* <ul id="inventoryList" >
    </ul> *@
</div>


